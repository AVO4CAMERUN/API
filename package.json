{
  "name": "typescript-api",
  "version": "1.0.0",
  "description": "",
  "main": "src/server.js",
  "scripts": {
    "start": "npx tsc & node built/server.js",
    "build": "npx tsc",
    "test": "npx jest ./src",
    "generate:prisma": "npx prisma db push",
    "start:prod": "npm run generate:prisma && node server.js"
  },
  "tsconfig": {
    "compilerOptions": {
      "target": "es5",
      "outDir": "./built",
      "allowJs": true,
      "removeComments": true
    },
    "include": ["./src/**/*"]
  },
  "prisma": {
    "schema": "src/prisma/schema.prisma"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "verbose": true,
    "globals": {
      "ts-jest": {
        "isolatedModules": true
      }
    }
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^3.11.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/supertest": "^2.0.12",
    "@types/winston": "^2.4.4",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "googleapis": "^100.0.0",
    "jest-mock-extended": "^2.0.6",
    "js-sha256": "^0.9.0",
    "jsonwebtoken": "^8.5.1",
    "prisma": "^3.14.0",
    "supertest": "^6.2.3",
    "swagger-ui-express": "^4.4.0",
    "winston": "^3.7.2"
  },
  "devDependencies": {
    "@types/jest": "^28.1.1",
    "@types/node": "^17.0.39",
    "jest": "^28.1.0",
    "ts-jest": "^28.0.4",
    "typescript": "^4.7.3"
  }
}
